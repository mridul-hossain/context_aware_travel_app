<DashboardScreen>:
    name: "dashboard"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 1, 1, 1, 1 # White background

        # --- HEADER ---
        MDBoxLayout:
            size_hint_y: None
            height: dp(80)
            padding: [dp(20), dp(10), dp(20), dp(10)] # Left, Top, Right, Bottom
            spacing: dp(10)
            md_bg_color: 1, 1, 1, 1
            elevation: 0 

            # --- Avatar ---
            MDCard:
